<section class="admin-dashboard-show">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div>
    <div class="row">
      <div class="col-md-6">
        <table class="table table-striped table-md">
          <thead class="table-dark">
            <tr>
              <th>Model</th>
              <th>Count</th>
              <th style="width: 30%"></th>
            </tr>
          </thead>  
          <tbody>
            <tr>
              <td>Products</td>
              <td><%= @products_count %></td>
              <td>
                <%= link_to "View Products", admin_products_path, class: "btn btn-success" %>
              </td>
            </tr>
            <tr>
              <td>Categories</td>
              <td><%= @categories_count %></td>
              <td>
                <%= link_to "View Categories", admin_categories_path, class: "btn btn-success" %>
              </td>
            </tr>
            <tr>
              <td>Orders</td>
              <td><%= @orders_count %></td>
              <td></td>
            </tr>
            <tr>
              <td>Line Items</td>
              <td><%= @line_items_count %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</section>